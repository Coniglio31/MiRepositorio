<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LLA</title>
</head>
<body>
    <script>
        var nota=prompt ("Ingrese nota");
        
        if (nota>=0 & nota<=10) {
            document.write ("calculando...  :");
        } else {
            document.write ("No es una nota valida, volver a intentar");
        }
        if (nota>=0 & nota<=4) {
            document.write ("Se encuentra en suspenso");
        } else {
            if (nota=5) {
                document.write ("Se encuentra aprobado");
            } else {
                if (nota=6) {
                    document.write ("Se encuentra Bien");
                } else {
                if (nota>=7 || nota<=8) {
                    document.write ("Se encuentra Notable");
                } else {
                    document.write ("Se encuentra Sobresaliente");
                }
                }
            }
        }
    </script>
</body>
</html>
